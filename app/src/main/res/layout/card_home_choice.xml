<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="120dp"
    android:layout_margin="12dp"
    android:clipChildren="false"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:background="@drawable/textfield_bg_home_plus">

    <androidx.cardview.widget.CardView
        android:id="@+id/topSideCard"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/dishHomeImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/crop_chicken"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/cardHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manropebold"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:text="Name of item"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topSideCard"/>


    <TextView
        android:id="@+id/cardHomeRest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manropesemibold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        android:text="Restaurant Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardHomeTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>
