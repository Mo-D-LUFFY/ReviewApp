<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="160dp"
    android:layout_margin="12dp"
    android:clipChildren="false"
    android:elevation="2dp"
    android:padding="4dp"
    android:background="@drawable/textfield_bg_home_plus">

    <androidx.cardview.widget.CardView
        android:id="@+id/topSideCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="90dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/dishHomeImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/crop_chicken"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/cardHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manropesemibold"
        android:maxLines="2"
        android:text="Name of item"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topSideCard"/>
    <TextView
        android:id="@+id/cardHomeAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manropesemibold"
        android:maxLines="2"
        android:text="'@"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/cardHomeTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cardHomeRest"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/manropesemibold"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        android:text="Restaurant Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardHomeAt" />
</androidx.constraintlayout.widget.ConstraintLayout>
