<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/topLiLa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dialog_bg"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/cancelID"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/close_icon"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/realway_bold"
            android:textAlignment="center"
            android:text="Change DP??"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/realway_bold"
            android:text="But U Look So Good 😍!"
            android:textSize="18sp"
            android:textColor="#8F8F8F"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgchange"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:background="@drawable/profile_icon_selector"
                android:contentDescription="@string/app_name"
                android:elevation="8dp"
                android:src="@drawable/camera_profile" />

            <ImageButton
                android:id="@+id/glychange"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:background="@drawable/profile_icon_selector"
                android:contentDescription="@string/app_name"
                android:elevation="8dp"
                android:src="@drawable/gallery_profile" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/userImg_Dialog"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circular_bg"
        android:elevation="8dp"
        android:padding="15dp"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="@+id/topLiLa"
        app:layout_constraintStart_toStartOf="@+id/topLiLa"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

