<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:clipChildren="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                app:cardElevation="8dp"
                android:clipChildren="false"
                app:cardCornerRadius="90dp">
                <ImageView
                    android:id="@+id/User_profile_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/person1"
                    android:elevation="8dp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Dish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dish Name"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/manropesemibold"/>

            <TextView
                android:id="@+id/User_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="by personName(@rooster etc.)"
                android:textSize="11sp"
                android:fontFamily="@font/manropesemibold"
                android:textColor="@color/link"
                android:layout_gravity="top"/>

            <TextView
                android:id="@+id/Review_text"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#787878"
                android:text="This is a long text that might overflow beyond the specified number of lines in this TextView and we want to see ellipsis if it overflows."
                android:fontFamily="@font/manropesemibold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <!-- First LinearLayout with CardView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:elevation="8dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:id="@+id/Food_image"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/biryani_plahol" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_gravity="center_vertical"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressTint="#FFC107"
                            android:rating="4"
                            android:stepSize="1"/>
                        <ImageView
                            android:id="@+id/like_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/heart_oncard"
                            android:clickable="true"
                            android:layout_marginStart="30dp"
                            />
                        <TextView
                            android:id="@+id/like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="12K"
                            android:textColor="@color/black"
                            android:fontFamily="@font/manropesemibold"
                            android:layout_gravity="center"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/priceOnCard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Rs.125"
                            android:fontFamily="@font/manropesemibold"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textAlignment="viewEnd"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Second LinearLayout with ImageView -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/locationOnCard"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|center"
                        android:padding="3dp"
                        android:src="@drawable/location_feedcard" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A9A0A0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



