<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="8dp"
    app:flow_horizontalAlign="center"
    android:background="@android:color/white"
    app:flow_verticalAlign="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1.5">

            <ImageView
                android:id="@+id/imageOnCard"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/biryani_plahol"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:background="@drawable/bg_card_feed_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/location_feedcard"
                />
            <TextView
                android:id="@+id/titleofCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chole Bhature"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/monserat"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/garnet"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/monserat2"
                    android:text="3.5"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/gs_indicator_inactive_bg"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/prepareTaken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/monserat2"
                    android:text="( 10-20 mins)"
                    android:textColor="#7A7A7A"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/priceOnCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚¹60"
                android:layout_marginStart="15dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/monserat"/>

            <TextView
                android:id="@+id/reviewOnCard"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Review goes Here!"
                android:layout_marginEnd="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/monserat2"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_gravity="bottom"
                 android:paddingTop="16dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>