<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9EDDF"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie1log"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="loginanimation.json"
                app:lottie_speed="1"
                app:lottie_loop="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/realway_bold"
                android:text="Log In"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#575656"
                android:text="Sign in to Continue!"
                android:fontFamily="@font/realway_bold"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="120dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:elevation="8dp"
                android:textColor="@color/black"
                android:textColorHint="#575656"
                android:textStyle="bold"
                android:fontFamily="@font/realway_bold"
                android:hint="Email"
                android:textAlignment="center"
                android:outlineSpotShadowColor="@color/black"
                android:background="@drawable/button_back_login" />

            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPassword"
                android:elevation="8dp"
                android:textColor="@color/black"
                android:textColorHint="#575656"
                android:textStyle="bold"
                android:fontFamily="@font/realway_bold"
                android:hint="Password"
                android:textAlignment="center"
                android:outlineSpotShadowColor="@color/black"
                android:background="@drawable/button_back_login" />

            <TextView
                android:id="@+id/passwordResetButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:fontFamily="@font/realway_bold"
                android:text="Forgot Password?"
                android:textAlignment="viewStart"
                android:textColor="#575656"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:elevation="8dp"
                android:text="Login"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:fontFamily="@font/realway_bold"
                android:background="@drawable/button_login_black"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="20dp"/>

            <View
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginStart="32dp"
                android:background="#575656"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Or Login With"
                android:textSize="15sp"
                android:fontFamily="@font/realway_bold"
                android:textColor="#575656"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:id="@+id/google_signIn"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:elevation="8dp"
                android:outlineSpotShadowColor="@color/black"
                app:srcCompat="@drawable/google_atr"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:fontFamily="@font/realway_bold"
                android:minHeight="48dp"
                android:text="Don't have an Account? Sign Up"
                android:textAlignment="center"
                android:textColor="#575656"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>



