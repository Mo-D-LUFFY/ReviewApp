<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <View
                    android:id="@+id/view"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/circular_bg"
                    app:layout_constraintBottom_toBottomOf="@id/profileOnUser"
                    app:layout_constraintEnd_toEndOf="@id/profileOnUser"
                    app:layout_constraintStart_toStartOf="@id/profileOnUser"
                    app:layout_constraintTop_toTopOf="@id/profileOnUser" />

                <ImageView
                    android:id="@+id/profileOnUser"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_margin="22dp"
                    android:background="@drawable/circular_bg"
                    android:src="@drawable/profile"
                    android:transitionName="photu"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/backtobase"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/black"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/back_rounded_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.047"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.08" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/userNameProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AYUSH RAJ"
                android:fontFamily="@font/realway_bold"
                android:textSize="28sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/lloflikes_posts"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/user_profile_bg"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="120dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/phoneno_profile" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:fontFamily="@font/realway_bold"
                            android:text="7985419494 ðŸš«" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/gmailuser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/email_circle_svgrepo_com" />

                        <TextView
                            android:id="@+id/gmailofuser"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:fontFamily="@font/realway_bold"
                            android:text="vishal0010@gmail.com" />
                    </LinearLayout>
                    <View
                        android:id="@+id/line_1"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginStart="32dp"
                        android:background="#575656"
                        android:layout_marginEnd="32dp"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:elevation="8dp"
                        app:srcCompat="@drawable/badge_majorplus"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/realway_bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GOLD Major ++" />

                    <View
                        android:id="@+id/line_2"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginStart="32dp"
                        android:background="#575656"
                        android:layout_marginEnd="32dp"
                        android:layout_marginTop="10dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/logOutBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Log_out"
                        android:textAllCaps="false"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/button_login_black"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/realway_bold"
                        android:layout_marginStart="48dp"
                        android:layout_marginEnd="48dp"
                        />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:elevation="8dp"
                    android:background="@drawable/background_cards"
                    app:layout_constraintBottom_toTopOf="@id/lloflikes_posts"
                    app:layout_constraintTop_toTopOf="@id/lloflikes_posts"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="match_parent"
                            android:elevation="4dp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/cards_on_profile"
                            android:layout_weight="0.333"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/reviewProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/honor_profile" />

                            <TextView
                                android:id="@+id/reviewCountname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/realway_bold"
                                android:text="Reviews"
                                android:textAlignment="center"
                                android:textColor="#7A7979"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/reviewCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/realway_bold"
                                android:text="10.3 K"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/cards_on_profile"
                            android:elevation="4dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="0.333"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/opinion_profile" />

                            <TextView
                                android:id="@+id/errorCountname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/realway_bold"
                                android:text="Anything"
                                android:textAlignment="center"
                                android:textColor="#7A7979"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/realway_bold"
                                android:text="7"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/cards_on_profile"
                            android:elevation="4dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="0.333"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/postsprofile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/posts_profile" />

                            <TextView
                                android:id="@+id/postsCountname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/realway_bold"
                                android:text="Posts"
                                android:textAlignment="center"
                                android:textColor="#7A7979"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/postCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/realway_bold"
                                android:text="23"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

