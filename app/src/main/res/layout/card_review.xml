<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clipToOutline="true"
    android:background="@drawable/textfield_bg_home_plus"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/OfferTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserat"
                android:text="SAVE &amp; SLAY"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/offersDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="#7C7A7A"
                android:fontFamily="@font/manropesemibold"
                android:text="Enjoy ur Coupon For saving 100rs. @ ShamaRestraunt only for today."
                android:maxLines="2"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ImageOnCard"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/tokens_1"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>