<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background Color -->
            <solid android:color="#000000"/> <!-- Change the color as per your preference -->

            <!-- Rounded Corners -->
            <corners android:radius="10dp"/> <!-- Adjust the radius as per your preference -->
        </shape>
    </item>

    <!-- Border Line -->
    <item android:right="3dp" android:left="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <!-- Border Color -->
            <solid android:color="#000000"/> <!-- Change the color as per your preference -->

            <!-- Rounded Corners for Border -->
            <corners android:radius="10dp"/> <!-- Match the radius with the background -->
        </shape>
    </item>

</layer-list>
